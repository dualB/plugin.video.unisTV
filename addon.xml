<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.unisTV"
       name="Unis TV"
       version="1.0.2"
       provider-name="SlySen"
>
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="xbmc.json" version="6.0.0"/>
        <import addon="xbmc.addon" version="12.0.0"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
        <!--<import addon="script.module.simple.downloader" version="0.9.4"/>-->
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Plugin for the Unis.ca site</summary>
	    <summary lang="fr">Addiciel vidéo donnant accès aux vidéos du site Unis.ca</summary>
        <description>Play videos from Unis.ca site.</description>
	    <description lang="fr">Cet addiciel permet d'accèder au contenu vidéo d'Unis.ca.</description>
    </extension>
</addon>
